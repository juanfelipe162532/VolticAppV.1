<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#55000000"/> <!-- Color de la sombra (semi-transparente negro) -->
            <corners android:radius="25dp"/>
            <padding android:bottom="2dp"/>
        </shape>
    </item>
    <!-- Forma principal -->
    <item android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/main_panel_rectangle"/> <!-- Color rojo -->
            <corners android:radius="25dp"/> <!-- Radio de las esquinas redondeadas -->
        </shape>
    </item>
</layer-list>

