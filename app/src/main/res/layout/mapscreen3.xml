<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/startPointSearch" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true" >
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/gradient_fade_bottom_red"
        android:layout_alignParentBottom="true" />

    <RelativeLayout
        android:id="@+id/routeDistance"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginLeft="30dp">
    <TextView
        android:id="@+id/routeDistanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Distancia"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/routeDistanceNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/routeDistanceText"
        android:layout_marginTop="10dp"
        android:text="00.0"
        android:textColor="@android:color/white"
        android:fontFamily="@font/speed"
        android:textSize="40sp"/>
    <TextView
        android:id="@+id/routeDistanceKm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/routeDistanceNumbers"
        android:text="KM"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/speed"
        android:textSize="20sp"/>
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@id/routeDistance"
        android:layout_marginLeft="25dp"
        android:background="#99FFFFFF" />

    <RelativeLayout
        android:id="@+id/routeTime"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true">
    <TextView
        android:id="@+id/routeTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:text="Tiempo"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/routeTimeNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/routeTimeText"
        android:layout_marginTop="10dp"
        android:text="00:00"
        android:textColor="@android:color/white"
        android:fontFamily="@font/speed"
        android:textSize="40sp"/>
    </RelativeLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@id/routeTime"
        android:layout_marginLeft="25dp"
        android:background="#99FFFFFF" />

    <RelativeLayout
        android:id="@+id/routeSpeed"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp">
    <TextView
        android:id="@+id/routeSpeedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:text="Velocidad"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/routeSpeedNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/routeSpeedText"
        android:layout_marginTop="10dp"
        android:text="0.0"
        android:textColor="@android:color/white"
        android:fontFamily="@font/speed"
        android:textSize="40sp"/>
    <TextView
        android:id="@+id/routesSpeedKmS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/routeSpeedNumbers"
        android:text="KM/H"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/speed"
        android:textSize="20sp"/>
    </RelativeLayout>
    </RelativeLayout>

    <include
        layout="@layout/route_creation_loading_screen"
        android:id="@+id/route_creation_loading_screen"
        android:visibility="visible"/>

    <Button
        android:id="@+id/startRouteButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/map"
        android:layout_marginTop="-95dp"
        android:text="INICIAR RUTA"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_background_white"
        android:textColor="#FF0000" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/back_icon_red"/>
</RelativeLayout>
