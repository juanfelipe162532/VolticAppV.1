<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loadingsreenbackground"
    android:padding="16dp"
    tools:context=".RegisterScreen">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/registerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Regístrate"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/registerSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerTitle"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Por favor completa los campos. Todos son requeridos"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerSubtitle"
        android:layout_marginTop="16dp"
        android:hint="Correo electrónico"
        android:paddingStart="20dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/rounded_edittext"/>

    <ImageView
        android:id="@+id/emailStatus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@id/emailEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailEditText"
        android:layout_marginTop="25dp"
        android:hint="Nombre de usuario"
        android:paddingStart="20dp"
        android:inputType="text"
        android:background="@drawable/rounded_edittext"/>

    <ImageView
        android:id="@+id/usernameStatus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@id/usernameEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameEditText"
        android:layout_marginTop="25dp"
        android:hint="Contraseña"
        android:paddingStart="20dp"
        android:inputType="textPassword"
        android:background="@drawable/rounded_edittext"/>

    <ImageView
        android:id="@+id/passwordToggle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/passwordEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/ic_eye"/>

    <ImageView
        android:id="@+id/passwordStatus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@id/passwordEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="55dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/confirmPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditText"
        android:layout_marginTop="25dp"
        android:hint="Confirma tu contraseña"
        android:paddingStart="20dp"
        android:inputType="textPassword"
        android:background="@drawable/rounded_edittext"/>

    <ImageView
        android:id="@+id/confirmPasswordToggle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/confirmPasswordEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/ic_eye"/>

    <ImageView
        android:id="@+id/confirmPasswordStatus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@id/confirmPasswordEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="55dp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/termsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmPasswordEditText"
        android:layout_marginTop="30dp"
        android:text="Estoy de acuerdo con los Términos y condiciones"
        android:textSize="13sp"
        android:textStyle="bold"
        android:buttonTint="@color/checkbox_color"/>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/termsCheckBox"
        android:layout_marginTop="30dp"
        android:text="REGISTRARME"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button_background_red"
        android:textColor="#FFFF" />

    <TextView
        android:id="@+id/register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerButton"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#000000" />

</RelativeLayout>



